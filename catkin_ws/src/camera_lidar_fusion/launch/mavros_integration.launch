<?xml version="1.0"?>
<launch>
    <!-- MAVROS Configuration -->
    <arg name="fcu_url" default="udp://:14555@" />
    <arg name="gcs_url" default="" />
    <arg name="tgt_system" default="1" />
    <arg name="tgt_component" default="1" />
    <arg name="log_output" default="screen" />
    <arg name="fcu_protocol" default="v2.0" />
    <arg name="respawn_mavros" default="false" />

    <!-- MAVROS Node -->
    <include file="$(find mavros)/launch/node.launch">
        <arg name="pluginlists_yaml" value="$(find mavros)/launch/apm_pluginlists.yaml" />
        <arg name="config_yaml" value="$(find mavros)/launch/apm_config.yaml" />
        <arg name="fcu_url" value="$(arg fcu_url)" />
        <arg name="gcs_url" value="$(arg gcs_url)" />
        <arg name="tgt_system" value="$(arg tgt_system)" />
        <arg name="tgt_component" value="$(arg tgt_component)" />
        <arg name="log_output" value="$(arg log_output)" />
        <arg name="fcu_protocol" value="$(arg fcu_protocol)" />
        <arg name="respawn_mavros" value="$(arg respawn_mavros)" />
    </include>

    <!-- Camera-LiDAR Fusion System -->
    <include file="$(find camera_lidar_fusion)/launch/complete_system_final.launch" />

    <!-- MAVROS Obstacle Avoidance Node -->
    <node name="mavros_obstacle_node" pkg="camera_lidar_fusion" type="mavros_obstacle_node.py" output="screen">
        <!-- Obstacle avoidance parameters -->
        <param name="fov_horizontal" value="180.0" />  <!-- degrees -->
        <param name="fov_vertical" value="60.0" />      <!-- degrees -->
        <param name="max_distance" value="30.0" />      <!-- meters -->
        <param name="angle_increment" value="2.0" />    <!-- degrees -->
    </node>

    <!-- Optional: Velocity Setpoint Publisher for guided flight -->
    <node name="velocity_controller" pkg="camera_lidar_fusion" type="velocity_controller_node.py" output="screen" if="$(arg enable_velocity_control)">
        <param name="max_velocity" value="2.0" />  <!-- m/s -->
        <param name="safety_distance" value="5.0" />  <!-- meters -->
    </node>

    <!-- RViz for visualization -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find camera_lidar_fusion)/config/mavros_integration.rviz" output="screen" />

</launch>

